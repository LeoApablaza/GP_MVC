@model Panaderia_Gestion.Models.Sales

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Sales</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">


            <div class="col-xl-6 col-md-6 mb-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.amount, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control", maxlength = "10" } })
                        @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.product_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.product_ID, (IEnumerable<SelectListItem>)ViewBag.ProductList, "--Seleccionar--", new { @class = "form-control", @id = "prod_ID" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.client_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.client_ID, (IEnumerable<SelectListItem>)ViewBag.ClientList, "--Seleccionar--", new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="col-xl-6 col-md-6 mb-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.wayToPay_ID, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.wayToPay_ID, (IEnumerable<SelectListItem>)ViewBag.WayToPayList, "--Seleccionar--", new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.saleType, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.saleType, new { htmlAttributes = new { @class = "form-control", placeholder = "--Tipo de venta del producto--", id ="lista", @disabled = "disabled"} })
                    </div>
                </div>

              

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Agregar" class="btn btn-success mr-2" />

                        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-secondary" })

                    </div>
                </div>
            </div>
        </div>
    </div>
}



@section Scripts
{
    <script type="text/javascript" src="~/Content/js/SalesCreate.js"></script>
}



