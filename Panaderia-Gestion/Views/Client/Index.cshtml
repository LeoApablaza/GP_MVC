@model IEnumerable<Panaderia_Gestion.Models.Client>

@{
    ViewBag.Title = "Index";
}

    <div class="container-fluid">


        <h2 class="h4 mb-2 text-gray-800">LISTA DE CLIENTES</h2>

        <div class="row justify-content-end" align="right">
            <div class="my-2 mr-3">
                <a href="/Client/Create" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-arrow-right"></i>
                    </span>
                    <span class="text">Agregar cliente</span>
                </a>
            </div>
        </div>
        <div class="card shadow mb-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.client_ID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.phone)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.debt)
                            </th>
                            <th>Editar  <i class="fas fa-exclamation-triangle"></i></th>
                            <th>Eliminar  <i class="fas fa-trash"></i></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.client_ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone)
                        </td>
                        <td>
                            <div class="card-deck ml-1 py-3 pl-4 border-left-danger">
                                @Html.DisplayFor(modelItem => item.debt)
                            </div>

                        </td>
                        
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.client_ID }, new { @class = "btn btn-warning" })
                        </td>
                        <td>
                            @Html.ActionLink("Eliminar", "Delete", new {  id=item.client_ID  }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                         }


                    </table>
                </div>
            </div>
        </div>
    </div>


